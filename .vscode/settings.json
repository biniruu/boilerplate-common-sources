{
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.autoClosingBrackets": "always",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "breadcrumbs.enabled": true,
  // at-rule 등 css 관련 규칙을 사용자화 하여 이용하는 데 필요한 설정 파일을 연결하는 옵션
  "css.customData": ["./.vscode/css_custom_data.json"],
  // sass 등과 같은 css 전처리기에서 사용하는 at rule을 css 파일에서 사용했을 때 at-rule-no-unknown 경고가 발생하지 않도록 함
  // stylelint가 발생시키는 에러 처리는 해당 at rule을 .stylelintrc에서 'at-rule-no-unknown'에 ignoreAtRules 옵션으로 추가해야 함
  "css.lint.unknownAtRules": "ignore",
  // css에서 값이 0일 때 '0px'이나 '0em'처럼 단위를 붙이면 경고 발생
  "css.lint.zeroUnits": "warning",
  "editor.bracketPairColorization.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.definitionLinkOpensInPeek": true,
  "editor.fontFamily": "D2Coding, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 16,
  // 저장할 때마다 포맷을 자동으로 교정
  "editor.formatOnSave": true,
  "editor.hover.delay": 600,
  "editor.inlineSuggest.enabled": true,
  "editor.minimap.enabled": true,
  "editor.minimap.showSlider": "always",
  "editor.multiCursorModifier": "ctrlCmd",
  "editor.suggestSelection": "first",
  "editor.tabCompletion": "on",
  "editor.tabSize": 2,
  "editor.tokenColorCustomizations": {
    "comments": "#fff"
  },
  "editor.unfoldOnClickAfterEndOfLine": true,
  "emmet.includeLanguages": {
    // jsx 또는 js에서 emmet을 사용하는 옵션
    "javascript": "javascriptreact",
    "postcss": "css"
  },
  "emmet.preferences": {
    "css.color.short": true
  },
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.syntaxProfiles": {
    // postcss 문법을 사용하기 위한 옵션
    "postcss": "css"
  },
  "emmet.triggerExpansionOnTab": true,
  "eslint.format.enable": true,
  // .eslintrc 파일 위치
  "eslint.workingDirectories": ["."],
  "explorer.autoReveal": false,
  // 하위 폴더가 하나밖에 없을 때 폴더 정렬이 일렬로 나오지 않고 일반적인 방식으로 계층화 되도록 함
  "explorer.compactFolders": false,
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  // "files.exclude": {
  //   "**/.git": false,
  //   "node_modules/": true
  // },
  "files.insertFinalNewline": true,
  "problems.autoReveal": false,
  "stylelint.validate": [
    // stylelint로 유효성을 검증할 언어만 선택
    "css",
    "html",
    "less",
    "markdown",
    "postcss",
    "sass",
    "scss",
    "source.css.styled",
    "source.markdown.math",
    "styled-css",
    "sugarss",
    "svelte",
    "typescript",
    "typescriptreact",
    "vue",
    "vue-html",
    "vue-postcss",
    "xml",
    "xsl"
  ],
  "terminal.integrated.defaultProfile.linux": "/bin/zsh",
  "terminal.integrated.defaultProfile.osx": "zsh",
  "terminal.integrated.fontFamily": "D2Coding, Menlo, Monaco, 'Courier New', monospace",
  "terminal.integrated.fontSize": 16,
  "terminal.integrated.lineHeight": 1.4,
  // typescript를 사용하지 않는 프로젝트에서 typescript 관련 오류가 발생할 때 활성화
  // "typescript.validate.enable": false,
  "workbench.colorCustomizations": {
    "terminal.ansiBlack": "#000000",
    "terminal.ansiBlue": "#c9a8fa",
    "terminal.ansiBrightBlack": "#676767",
    "terminal.ansiBrightBlue": "#c9a8fa",
    "terminal.ansiBrightCyan": "#99ecfd",
    "terminal.ansiBrightGreen": "#59f68d",
    "terminal.ansiBrightMagenta": "#ff76ff",
    "terminal.ansiBrightRed": "#ff6d67",
    "terminal.ansiBrightWhite": "#feffff",
    "terminal.ansiBrightYellow": "#f3f89d",
    "terminal.ansiCyan": "#99ecfd",
    "terminal.ansiGreen": "#59f68d",
    "terminal.ansiMagneta": "#ff92d0",
    "terminal.ansiRed": "#ff6d67",
    "terminal.ansiWhite": "#c7c7c7",
    "terminal.ansiYellow": "#f3f89d"
  },
  "workbench.editor.decorations.colors": false
}
